{
  "name": "test-orchestrator",
  "version": "2.0.0",
  "description": "Orchestrates test execution using Azure Container Apps Jobs (Job-only runtime)",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "job": "node dist/job/main.js",
    "prejob": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit"
  },
  "dependencies": {
    "@azure/app-configuration": "^1.6.0",
    "@azure/arm-appcontainers": "^3.0.0",
    "@azure/identity": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}